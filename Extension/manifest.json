{
  "manifest_version": 3,
  "name": "SafeTabGuard",
  "version": "1.0",
  "description": "Detects and blocks phishing or harmful websites to keep you safe online.",

  "permissions": [
    "tabs",           
    "scripting",      
    "storage",        
    "activeTab",      
    "webNavigation"   
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "SafeTabGuard",
    "default_icon": {
      "16": "icons/STG_icon.png",
      "48": "icons/STG_icon.png",
      "128": "icons/STG_icon.png"
    }
  },

  "icons": {
    "16": "icons/STG_icon.png",
    "48": "icons/STG_icon.png",
    "128": "icons/STG_icon.png"
  }
}